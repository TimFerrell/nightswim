{
  "version": 2,
  "name": "nightswim",
  "functions": {
    "server.js": {
      "maxDuration": 30,
      "runtime": "nodejs20.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/collect-data",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/cron/collect-weather",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/check-alerts",
      "schedule": "*/15 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 