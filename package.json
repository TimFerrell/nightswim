{
  "name": "nightswim",
  "version": "1.0.0",
  "description": "Pool monitoring dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest tests/ui-optimizations.test.js",
    "test:services": "jest tests/services/",
    "test:routes": "jest tests/routes/",
    "test:integration": "jest tests/integration/",
    "test:all": "npm run test:coverage && npm run test:ui && npm run test:services && npm run test:routes",
    "test:ci": "npm run test:all -- --ci --coverage --watchAll=false",
    "predeploy": "npm run test:ci",
    "lint": "eslint src/ public/ tests/",
    "lint:fix": "eslint src/ public/ tests/ --fix",
    "validate": "npm run lint && npm run test:ci",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.18.1",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.33.2",
    "axios": "^1.6.0",
    "cheerio": "^1.1.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "extensionsToTreatAsEsm": [],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "public/script.js",
      "!src/app.js",
      "!**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {},
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/test/**/*.test.js"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "transformIgnorePatterns": [
      "node_modules/(?!(@influxdata|cheerio|domutils|dom-serializer|domelementtype|htmlparser2)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "pool",
    "monitoring",
    "dashboard",
    "hayward"
  ],
  "author": "Timothy Ferrell",
  "license": "MIT"
}
